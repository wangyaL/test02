<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_00"
    tools:context=".MainActivity" >

    <TextView 
        android:id="@+id/main_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="33dp"
        android:text="用户名："
        />

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_text_view1"
        android:layout_alignBottom="@+id/main_text_view1"
        android:layout_toRightOf="@+id/main_text_view1"
        android:singleLine="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_username"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/main_text_view1"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/main_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_password"
        android:layout_alignBottom="@+id/editText_password"
        android:layout_alignLeft="@+id/main_text_view1"
        android:text="密    码：" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/android" />  
    
    <Button
        android:id="@+id/btn_login"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginRight="55dp"
        android:layout_marginTop="25dp"
        android:text="登录" />

    <Button
        android:id="@+id/to_menu_home"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_login"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="20dp"
        android:text="首页" />

    <CheckBox
        android:id="@+id/cb_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to_menu_home"
        android:layout_alignLeft="@+id/main_text_view2"
        android:text="记住密码"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/cb_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/to_menu_home"
        android:layout_alignBottom="@+id/to_menu_home"
        android:layout_alignLeft="@+id/cb_mima"
        android:text="自动登录"
        android:textColor="#000000" />

</RelativeLayout>